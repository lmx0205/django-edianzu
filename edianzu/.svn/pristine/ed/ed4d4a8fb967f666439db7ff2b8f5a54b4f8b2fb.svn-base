body {
    padding-bottom: 70px;
    background: #eee;
    overflow: scroll !important;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.detail {
    background: #fff;
    width: 100%;
    height: 35px;
    display: flex;
    line-height: 35px;
    position: relative;
    border-bottom: 1px solid #ccc;
}

.detail a {
    padding-left: 5px;
    font-size: 20px;
    line-height: 35px;
    color: black;
    text-decoration: none;
}

.detail h1 {
    font-size: 16px;
    position: absolute;
    left: 42%;
}

.img {
    background: #fff;
    border-bottom: 1px solid #ccc;
}

.img img {
    margin-left: 10%;
    width: 80%;
    height: 300px;
}

.price {
    padding: .64rem .53rem .75rem;
    box-sizing: border-box;
    border: 1px solid #e8e8e8;
    border-top: none;
    font-size: 15px;
    color: rgb(87, 82, 82);
    word-break: break-all;
    word-wrap: break-word;
    line-height: 1rem;
    background: #fff;
}

.price span {
    color: #fa5250;
}

.pri1 {
    font-size: 20px;
}

.pri2 {

    font-size: .8rem;
    height: .64rem;
    line-height: 1.64rem;
    border-radius: .32rem;
    margin-left: .32rem;
    padding: 0 .32rem;
    background: #ffeaea;
    margin-top: .32rem;
}

.pri3 {
    display: block;
    margin-top: 20px;
}

.choose {
    padding-left: 15px;
    margin-top: 10px;
    background: #fff;
    width: 100%;
    height: 100px;
    line-height: 50px;
    color: rgb(87, 82, 82);
    font-size: 14px;
    margin-bottom: 10px;
}

.ch2 {
    margin-left: 28px;
}

.rent {
    padding-left: 15px;
    padding-top: 10px;
    width: 100%;
    height: 160px;
    background: #fff;
    font-size: 14px;
    color: rgb(87, 82, 82);
}

.rentt {
    display: block;
    padding-bottom: 10px;
}

.rent1 {
    margin-bottom: 15px;
    margin-left: 38px;
    margin-right: 55px;
    padding-left: 10px;
    padding-bottom: 5px;
}

.rent2 {
    margin-left: 38px;
    margin-right: 55px;
    padding-left: 10px;
    padding-bottom: 5px;

}

.rent1 p {
    padding-top: 5px
}

.rent2 p {
    padding-top: 5px
}

.rent .ren {
    background: #ffac13;
    border-radius: 4px;
    margin-left: 10px;
    font-size: 12px
}

.product-footer {
    height: 48px !important;
}

.chooSE {
    display: flex;
}

.SHOO {
    width: 120px;
    height: 30px;
    border: 1px solid #ccc;
    margin-left: 57px;
    margin-top: 10px;
    line-height: 30px;
    display: flex;
    justify-content: space-around;
    font-size: 20px;
    border-radius: 10px;
}

.chooseNum {
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    padding-left: 14px;
    padding-right: 14px;
}

.active {
    border: 1px solid #fa5250;
    border-radius: 10px;
    color: #fa5250;
}